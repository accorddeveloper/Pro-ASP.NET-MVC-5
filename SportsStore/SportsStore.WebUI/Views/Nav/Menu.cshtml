@model IEnumerable<string>

@{ 
    bool horizontal = (bool)(ViewContext.RouteData.Values["horizontalLayout"] ?? false);
    string wrapperClasses = horizontal ? "btn-group btn-group-sm btn-group-justified" : null;
}

<div class="@wrapperClasses">
    @Html.ActionLink("Home", "List", "Product", null, new { @class = "btn btn-default " + (horizontal ? "btn-sm" : "btn-block btn-lg") })

    @foreach (var link in Model)
    {
        @Html.RouteLink(
        linkText: link,
        routeValues: new { controller = "Product", action = "List", category = link, page = 1 },
        htmlAttributes: new { @class = "btn btn-default " + (horizontal ? "btn-sm" : "btn-block btn-lg") + (link == ViewBag.SelectedCategory ? " btn-primary" : "") })
    }
</div>