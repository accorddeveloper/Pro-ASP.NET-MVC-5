@model IEnumerable<string>

<div class="btn-group-sm btn-group-justified">
    @Html.ActionLink("Home", "List", "Product", null, new { @class = "btn btn-default btn-sm" })

    @foreach (var link in Model)
    {
        @Html.RouteLink(
            linkText: link,
            routeValues: new { controller = "Product", action = "List", category = link, page = 1 },
            htmlAttributes: new { @class = "btn btn-default btn-sm" + (link == ViewBag.SelectedCategory ? "btn-primary" : "") })
    }
</div>